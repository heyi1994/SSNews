<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
     <TextView
         android:id="@+id/version_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:textColor="@android:color/black"
         />
    <TextView
        android:id="@+id/version_info1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/version_info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/version_info3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        android:maxLines="1"

        android:textColor="@android:color/black"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
   <TextView
       android:id="@+id/tv_up_version"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:padding="3dp"
       android:text="马上升级"
       android:textSize="20dp"
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dp"
       android:clickable="true"
       android:focusable="true"
       android:focusableInTouchMode="true"
       android:background="@drawable/select_text_check_version"
       android:textColor="@drawable/selector_textcolor_check_version"
       />
        <TextView
            android:id="@+id/tv_cancel_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="取消"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_toLeftOf="@id/tv_up_version"
            android:textSize="20dp"
            android:layout_marginRight="30dp"
            android:textColor="@drawable/selector_textcolor_check_version"
            android:background="@drawable/select_text_check_version"
            />
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="101dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"

    >
    <RelativeLayout
        android:layout_width="80dp"
        android:gravity="center_vertical"
        android:layout_height="80dp">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/comment_user_icon"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:civ_border_width="2dp"

        app:civ_border_color="@android:color/transparent"
        />
        <TextView
            android:id="@+id/comment_user_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最北的北方"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/comment_user_icon"
            android:textColor="@android:color/holo_blue_dark"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/comment_user_comment_tv"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="很不错的文章哦!"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:maxLines="3"
            android:ellipsize="end"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="20dp">
          <TextView
              android:id="@+id/comment_user_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2016-12-21"
              />
            <RelativeLayout
                android:layout_width="37dp"
                android:id="@+id/comment_user_comment"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit"
                />
                <TextView
                    android:id="@+id/comment_user_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="999+"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    />
                </RelativeLayout>
            <RelativeLayout
                android:id="@+id/comment_user_bad"
                android:layout_width="37dp"
                android:layout_toLeftOf="@id/comment_user_comment"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bad"
                />
                <TextView
                    android:id="@+id/comment_user_bad_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="999+"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="37dp"
                android:layout_toLeftOf="@id/comment_user_bad"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/good"
                    />
                <TextView
                    android:id="@+id/comment_user_good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="999+"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>
    </LinearLayout>
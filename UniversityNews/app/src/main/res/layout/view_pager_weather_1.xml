<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@mipmap/home_pager"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="50sp"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"

            />
        <TextView
            android:id="@+id/where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/temperature"
            />
        <TextView
            android:id="@+id/text_split"
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:background="@android:color/white"
            android:layout_toRightOf="@+id/where"
            android:layout_below="@+id/temperature"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"
            android:layout_marginRight="10dp"

            />
        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temperature"
            android:layout_toRightOf="@+id/where"
            android:layout_marginLeft="13dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/pollutionIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/pollutionIndex"
            android:layout_alignStart="@id/pollutionIndex"
            />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/wind"
            android:layout_alignStart="@id/pollutionIndex"
            />
        <TextView
            android:id="@+id/dress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/humidity"
            android:layout_alignStart="@id/pollutionIndex"
            />
    <TextView
        android:id="@+id/exerciseIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/dress"
        android:layout_alignStart="@id/pollutionIndex"
        />

        <TextView
            android:id="@+id/weather_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/exerciseIndex"
            android:layout_alignStart="@id/pollutionIndex"
            />
        <TextView
            android:id="@+id/sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/where"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/sunrise"
            android:layout_marginLeft="10dp"
            />
    <TextView
        android:id="@+id/airCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/sunset"
        android:layout_marginLeft="10dp"
        />

    </RelativeLayout>

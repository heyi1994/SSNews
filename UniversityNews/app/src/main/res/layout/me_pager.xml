<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <com.intrusoft.library.FrissonView
            android:id="@+id/frisson_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/me_pager_icon"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@android:color/transparent"
                />
            <TextView
                android:id="@+id/me_pager_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        />

   <RelativeLayout
       android:id="@+id/rl_sighature"
       android:layout_width="match_parent"
       android:gravity="center_vertical"
       android:clickable="true"
       android:focusable="true"
       android:focusableInTouchMode="true"
       android:background="@drawable/select_me_pager_bg"
       android:layout_height="60dp"
       android:weightSum="1">
     <ImageView
         android:id="@+id/me_sign"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:layout_marginLeft="10dp"
         android:src="@mipmap/signature"/>
       <TextView
           android:id="@+id/me_tv_sign"
           android:layout_toRightOf="@id/me_sign"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@android:color/black"
           android:text="签名"
           android:layout_marginLeft="5dp"
           android:textSize="18sp"
           />
       <TextView
           android:id="@+id/signature_me_pager"
           android:layout_marginLeft="20dp"
           android:layout_toRightOf="@id/me_tv_sign"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="35dp"
           android:maxLines="1"
           android:textSize="18sp"
           android:ellipsize="end"
           />
       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:src="@mipmap/arrow_right"
           android:layout_alignParentRight="true"
           />
   </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/select_me_pager_bg"
        >
        <ImageView
            android:id="@+id/me_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/good"/>
        <TextView
            android:id="@+id/me_tv_like"
            android:layout_toRightOf="@id/me_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="点赞过的文章"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/me_tv_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/arrow_good"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/arrow_right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/select_me_pager_bg"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/me_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/edit"/>
        <TextView
            android:id="@+id/me_tv_edit"
            android:layout_toRightOf="@id/me_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="评论过的文章"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/me_tv_edit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/arrow_right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/select_me_pager_bg"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/me_collect"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/favorite"/>
        <TextView
            android:id="@+id/me_tv_collect"
            android:layout_toRightOf="@id/me_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="收藏过的文章"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/me_tv_collect_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/arrow_right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        />

</LinearLayout>
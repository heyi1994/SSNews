<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/header_line_news_icon"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@mipmap/test"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/header_line_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="几日发的说法和阿奴灵魂阿玉额阿鲁恶化好 "
        android:layout_toRightOf="@id/header_line_news_icon"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"

        android:textSize="18sp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日十分好看哈尔； 家；接；几我系带； 二级IE；安居房啊；节哀诶家额额额额东风飞啊飞爱妃啊爱妃"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        android:id="@+id/header_line_news_desc"
        android:layout_toRightOf="@id/header_line_news_icon"
        android:layout_below="@id/header_line_news_title"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/header_line_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-12-21 11:21"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
         />
</RelativeLayout>
</LinearLayout>